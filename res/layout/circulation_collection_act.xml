<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/_header" >

            <RelativeLayout
                android:id="@+id/child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/boxborder" >

                    <LinearLayout
                        android:id="@+id/tbl1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/row1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtptype"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/advt_pttype" />

                            <Spinner
                                android:id="@+id/spinptype"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/border" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtrep"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/advt_retype" />

                            <AutoCompleteTextView
                                android:id="@+id/auto_repres"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:background="@drawable/border"
                                android:inputType="text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txtrepreshidden"
                                android:layout_width="0dp"
                                android:layout_height="0dp" />

                            <Spinner
                                android:id="@+id/repres"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtagname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/advt_agname" />

                            <AutoCompleteTextView
                                android:id="@+id/edit_agen"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:background="@drawable/border"
                                android:inputType="text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txtaagencyhidden"
                                android:layout_width="0dp"
                                android:layout_height="0dp" />

                            <Spinner
                                android:id="@+id/agname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/paye_Mob"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtpaymob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/payee_mob" />

                            <EditText
                                android:id="@+id/paymob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border"
                                android:inputType="numberDecimal"
                                android:maxLength="10" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/paymode_con"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtpaymode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/advt_pmode" />

                            <Spinner
                                android:id="@+id/paymode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cheqno_con"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtcheqno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/advt_chno" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal" >

                                <EditText
                                    android:id="@+id/cheqno"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/border"
                                    android:inputType="numberDecimal"
                                    android:maxLength="10" />

                                <ImageButton
                                    android:id="@+id/chequeattach"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/attachment" />

                                <TextView
                                    android:id="@+id/editattachment"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cheqdate_con"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtcheqdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/advt_chq_date" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal" >

                                <EditText
                                    android:id="@+id/cheqdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:maxLength="15" />

                                <ImageButton
                                    android:id="@+id/chequeDate"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/calendar_icon" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bankname_con"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtbankname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/advt_bank_name" />

                            <Spinner
                                android:id="@+id/bankname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/amounts_con"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtamounts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/advt_amt" />

                            <EditText
                                android:id="@+id/bankamounts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border"
                                android:inputType="numberDecimal"
                                android:maxLength="10" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:weightSum="4" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/txtremarks"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/advt_remark" />

                                <EditText
                                    android:id="@+id/remarks"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/border" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2" >

                            <ImageView
                                android:id="@+id/userImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@drawable/receipt_cam_image" />

                            <TextView
                                android:id="@+id/txtusrimgadd"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="0" />

                            <ImageView
                                android:id="@+id/receiptImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@drawable/user_cam_image" />

                            <TextView
                                android:id="@+id/txtresimgadd"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="0" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                              
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/signin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:background="@drawable/loginpagebutton"
                                    android:text="@string/advt_submit" />

                                <TextView
                                    android:id="@+id/abcd"
                                    android:layout_width="70dp"
                                    android:layout_height="0dp" />

                                <TextView
                                    android:id="@+id/btverify"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:background="@drawable/loginpagebutton"
                                    android:text="@string/verify" />
                                
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/txthabits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="@string/advt_dts"
                    android:textAlignment="center"
                    android:textAllCaps="false" />
            </RelativeLayout>
            <!-- box2- -->

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>