<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupMaster"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#903E3C3A"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#00000066"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/close_lead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonboxbordergray"
            android:text="Close Lead"
            android:textColor="#fff"
            android:textSize="14dp" />

        <Button
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/clientregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonboxbordergray"
            android:text="Client Register"
            android:textColor="#fff"
            android:textSize="14dp"/>

        <Button
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonboxbordergray"
            android:text="Close"
            android:textColor="#fff"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>