<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/itemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

        <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
            />
        <LinearLayout
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.96">
            <TextView
                android:id="@+id/txtlead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:text="15 Leads/"
                android:textColor="@color/red"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/txtmeetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Meetings Done"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_marginTop="1dp"
                />
            <TextView
                android:id="@+id/txtreschedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total 3 Meetings Reschduled"
                android:layout_marginLeft="15dp"
                android:textColor="#0000ff"
                android:textSize="11sp"
                android:layout_marginTop="1dp"
                />
            <TextView
                android:id="@+id/txtpending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Still Pending for Next"
                android:layout_marginLeft="15dp"
                android:textColor="#a4c639"
                android:textSize="11sp"
                android:layout_marginTop="1dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View More >"
                android:textSize="11sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:id="@+id/view"
                />

        </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>