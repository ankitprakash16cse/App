<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearLayout"
    android:layout_height="wrap_content"
    tools:context=".Fragment_1">


    <RelativeLayout
        android:id="@+id/child1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_center" >

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/boxborder" >
          <LinearLayout

        android:id="@+id/layoutBack"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
               <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="TASK_NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

                <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="6 A.M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

          </LinearLayout>
          <LinearLayout
        android:layout_below="@id/layoutBack"
        android:layout_width="match_parent"
              android:layout_marginLeft="-6dp"
              android:orientation="vertical"
              android:id="@+id/layoutBack1"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView

            android:id="@+id/rv_child"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
              <ListView
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:id="@+id/list_parent"
                  android:background="@drawable/border_2">
              </ListView>

           </LinearLayout>
          <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/layoutBack1"
              android:layout_marginBottom="5dp"
              android:orientation="horizontal">

              <Button
                  android:id="@+id/submit_1"
                  android:layout_weight="0.5"
                  android:layout_marginLeft="200dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="6dp"
                  android:text="SUBMIT"
                  android:layout_width="15dp"
                  android:layout_height="30dp"
                  android:background="@drawable/button_background"
                  android:textColor="#fff"
                  android:textSize="14dp" />


              <Button
                  android:id="@+id/back_1"
                  android:layout_weight="0.5"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="6dp"
                  android:text="BACK"
                  android:layout_alignRight="@id/submit_1"
                  android:layout_width="15dp"
                  android:layout_height="30dp"
                  android:background="@drawable/button_background"
                  android:textColor="#fff"
                  android:textSize="14dp" />



          </LinearLayout>
       </RelativeLayout>
    </RelativeLayout>

</LinearLayout>